FoamFile
{
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    p
    {
        solver                GAMG;
        tolerance             1e-9;
        relTol                1e-6;
        smoother              GaussSeidel;
        cacheAgglomeration    true;
        nCellsInCoarsestLevel 20;
        agglomerator          faceAreaPair;
        mergeLevels           1;
    };

    U
    {
        solver          smoothSolver;
        smoother        GaussSeidel;

        tolerance       1e-9;
        relTol          1e-6;
	minIter		2;
    }



    "(h|k|epsilon)"
    {
        solver          smoothSolver;
        smoother        symGaussSeidel;

        tolerance       1e-9;
        relTol          1e-6;
	minIter		2;
    }

    "Yi"
    {
/*
        solver          PBiCGStab;
        preconditioner  DILU;
        tolerance       1e-12;
        relTol          1e-9;
	minIter		2;
*/
        solver          smoothSolver;
        smoother        symGaussSeidel;
        tolerance       1e-12;
        relTol          1e-9;
	minIter		2;
    }

    G
    {
        solver          PCG;
        preconditioner  DIC;
        tolerance       1e-08;
        relTol          0;
    }
}

PIMPLE
{
    momentumPredictor           yes;
    nOuterCorrectors            1;
    nCorrectors                 3;
    nNonOrthogonalCorrectors    0;

    maxDeltaT                   1e-4;
    maxCo                       0.20;
    alphaTemp                   0.05;
    alphaY                      0.05;
}

SIMPLE
{
    nNonOrthogonalCorrectors 2;

    transonic       no;
    consistent      yes;

    residualControl
    {
	// species
        default         1e-6;

	// fluid dynamics fields
        p               1e-3;
        U               1e-6;
        h               1e-6;
	e               1e-6;
	G		1e-6;

        // turbulence fields
        k 		1e-6;
        epsilon 	1e-6;
        omega 		1e-6;
    }
}

relaxationFactors
{
    fields
    {
        p               0.30;
        rho             0.01;
    }
    equations
    {
	// species
        default         0.2;

	// fluid dynamics fields
        U               0.2;
        h               0.2;
	e               0.2;
	G		0.2;

	// turbulence fields
        k 		0.2;
        epsilon 	0.2;
        omega 		0.2;
    }
}

