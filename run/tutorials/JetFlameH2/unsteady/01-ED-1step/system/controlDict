FoamFile
{
    format      ascii;
    class       dictionary;
    location    "system";
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application     	edcPimpleSMOKE;

startFrom       	latestTime;

startTime       	0;

stopAt          	endTime;

endTime         	0.6;

deltaT          	1e-7;

writeControl    	adjustableRunTime;

writeInterval   	0.1;

purgeWrite      	0;

writeFormat     	ascii;

writePrecision  	12;

writeCompression 	off;

timeFormat      	general;

timePrecision   	6;

runTimeModifiable 	true;

adjustTimeStep  	yes;

maxCo           	0.2;


